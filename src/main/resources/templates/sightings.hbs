{{#partial "content"}}
    <div style="background:#dee0e0; padding:10px;font-family: 'Patua One', cursive;"> <h5>ANIMALS IN THE AREA</h5></div>
    <div class="animals-container">
        <table class="table table-striped">
            <thead>
            <th>Animal ID</th>
            <th>Location</th>
            <th>Spotted By</th>
            <th>Date</th>
            </thead>
        {{#if sightings}}
            {{#each sightings }}
                <tr><td>{{animal_id}}</td>{{location}}<td>{{ranger_name}}</td><td></td><td>Today</td></tr>
            {{/each}}
        {{else}}
            <p>No Players Yet!</p>
        {{/if}}
        </table>
    </div>
{{/partial}}

