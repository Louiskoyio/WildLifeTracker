{{#partial "content"}}

    <div style="background:#dee0e0; padding:10px;font-family: 'Patua One', cursive;"> <h5>REPORT A SIGHTING</h5></div>

    <form action="/sightings" method="post">


        <div class="form-group">
            <label for="animal_id">Animal</label>
            <select id="animal_id" class="form-control" list="animals" name="animal_id">

                {{#if animal}}
                    {{#each animal }}
                        <option value="{{ id }}">{{ name }}</option>
                    {{/each}}
                {{else}}
                    <option>Error Loading Animals</option>
                {{/if}}
            </select>


        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <select id="location" class="form-control" list="locations" name="location">
                <option value="Zone A">Zone A</option>
                <option value="Zone B">Zone B</option>
                <option value="Zone C">Zone C</option>
                <option value="Zone D">Zone D</option>


            </select>
        </div>

        <div class="form-group">
            <label for="ranger_name">Ranger</label>
            <input id="ranger_name" class="form-control" name="ranger_name" type="text"><br>
        </div>


        <button type="submit" class="btn btn-primary">Record Sighting</button>
    </form>
{{/partial}}

