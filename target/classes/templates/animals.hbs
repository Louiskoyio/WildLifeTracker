{{#partial "content"}}
    <div style="background:#dee0e0; padding:10px;font-family: 'Patua One', cursive;"> <h5>ANIMALS IN THE AREA</h5></div>
    <div class="row animals-container">
        {{#if animals}}
            {{#each animals }}
                <div class="card card-transparent">
                    <div class="card-body">
                        <div class="attributes">
                            <div class="animal-attributes" style="font-size:15px;">
                                <img class="avatar" src="/images/animals/{{id}}.jpeg"><br>
                            </div>

                            <div class="animal-attributes">
                                <a><h1 style="font-family: 'Patua One', cursive;text-transform: uppercase;">{{ name }}</h1></a>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#sightingModal{{id}}">Report Sighting</button>


                                <div class="modal fade" id="sightingModal{{id}}" role="dialog">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Modal Header</h4>
                                            </div>
                                            <div class="modal-body">
                                                <form action="/sightings" method="post">


                                                    <div class="form-group">
                                                        <label for="animal_name">Animal</label>
                                                        <input id="animal_name" class="form-control" type="text" value="{{ name }}" name="animal_name" readonly>


                                                    </div>

                                                    <div class="form-group">
                                                        <label for="location">Location</label>
                                                        <select id="location" class="form-control" list="locations" name="locations">
                                                            <option>Zone A</option>
                                                            <option>Zone B</option>
                                                            <option>Zone C</option>
                                                            <option>Zone D</option>


                                                        </select>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="ranger">Ranger</label>
                                                        <input id="ranger" class="form-control" name="ranger" type="text"><br>
                                                    </div>


                                                    <button type="submit" class="btn btn-primary">Record Sighting</button>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>

                </div>

            {{/each}}
        {{else}}
            <p>No Players Yet!</p>
        {{/if}}
    </div>
{{/partial}}

